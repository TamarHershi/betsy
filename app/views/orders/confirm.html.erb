<div class="row">
  <h1 class="header-box">
    Order #<%= @order.id %> Confirmation
  </h1>
</div>


<div class="row">
  <div class="col-sm-12">
    Name: <strong><%= @order.cc_name %></strong><br>
    E-mail: <%= @order.email_address %><br>
    Address: <%= @order.street_address %><br>
             <%= @order.city %><br>
             <%= @order.state %><br>
             <%= @order.zip %><br>
    Order Placed: <%= @order.placed_at.strftime("%B %d, %Y") %><br>
    Order Status: <%= @order.status.capitalize %><br>
    <%=  %><br>
  </div>
</div>

<div class="row-fluid">
   <div class="col-xs-6">
      <div class="table-responsive">
         <table class="table table-bordered">
            <thead>
              <h3>UPS</h3>
               <tr>
                  <th>Shipping method</th>
                  <th>Cost</th>
                  <th>Estimate Date Delivery</th>
               </tr>
               <% @ups_results.each do |result| %>
               <tr>
                 <td> <%= result[0] %> </td>
                 <td> <%= nice_price(result[1].to_i) %> </td>
                 <% if !result[2].nil? %>
                  <td> <%= result[2].to_date.strftime("%m/%d/%Y") %> </td>
                <% else %>
                  <td> No Estimate Date</td>
                <% end %>
               </tr>
               <% end %>
            <thead>
         </table>
      </div>
   </div>
   <div class="col-xs-6">
      <div class="table-responsive">
         <table class="table table-bordered">
            <thead>
              <h3>USPS</h3>
               <tr>
                  <th>Shipping method</th>
                  <th>Cost</th>
                  <th>Estimate Date Delivery</th>
               </tr>
               <% @usps_results.each do |result| %>
               <tr>
                 <td> <%= result[0] %> </td>
                 <td> $<%= result[1].to_f/10 %> </td>
                 <td> No Estimate Date </td>
               </tr>
               <% end %>
         </table>
      </div>
   </div>
</div>

